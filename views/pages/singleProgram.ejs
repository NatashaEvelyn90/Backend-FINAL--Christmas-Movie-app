<%- include('../partials/header') %>

<main class="main" id="main">
    <h1 class="text-center soloTitle">
        <strong><%= solo.title %> </strong>
        <em class="ms-2"><%= solo.age_restrict %></em>
    </h1>
        <div class="d-flex flex-row flex-wrap justify-content-around">
            <figcaption>
                <img src="/media/<%= solo.img_url %>" alt="image of <%= solo.title %>" class="soloSize mx-auto d-block">
            </figcaption>
            
            <ul class="soloPrograms">
                <li>
                    <strong>Featured Length: </strong>
                        <em>
                            <%= solo.runtime %>
                        </em>
                </li>

                <li class="text-capitalize">
                    <strong>Format: </strong>
                        <em>
                            <%= solo.format %>
                        </em>
                </li>

                <li>
                    <strong>Approval Rating: </strong>
                        <em>
                            <%= solo.rating %><strong>/10</strong>
                        </em>
                </li>

                </br>

                <li>
                    <strong>Year: </strong>
                        <em>
                            <%= solo.yr_released %>
                        </em>
                </li>

                <li>
                    <strong>Company: </strong>
                        <em>
                            <%= solo.production_id %>
                        </em>
                </li>

                <li>
                    <strong>Director: </strong>
                        <em>
                            <%= solo.director %>
                        </em>
                </li>

                <li>
                    <strong>Actor/Actress: </strong>
                </li>

                <li>
                    <strong>Streaming Services: </strong>
                </li>
                
                <br>

                <li class="programDescription christmasText">
                    <em>
                        <%= solo.description %>
                    </em>
                </li>
            </ul>
        </div>
    <p class="text-center mt-3">Back to <a href="/allPrograms" class="singleLinkButton ">ALL PROGRAMS </a>or <a href="/" class="singleLinkButton">HOME</a></p>
</main>

<%- include('../partials/footer') %>